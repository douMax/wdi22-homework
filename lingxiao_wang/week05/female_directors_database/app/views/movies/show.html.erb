<h2>Movie Details</h2>

<h3><%= @movie.title %></h3>

<img class="movie_poster" src="<%= @movie.image %>" alt="">

<p>Directed by:</p>
<ul>
  <% @movie.directors.each do |director| %>
    <li>
      <%= link_to director.name, director_path(director) %>
    </li>
  <% end %>
</ul>

<p>Rlease Year: <%= @movie.release_date %></p>
<p>Description: <%= @movie.description %></p>

<%= link_to "edit", edit_movie_path(@movie) %>
<%= link_to "delete", movie_path(@movie.id), data: {:confirm => "Are you sure?" }, :method => :delete %>
<br>
<%= link_to "back", movies_path %>
